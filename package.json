{
	"name": "@stylify/packages",
	"version": "0.0.1",
	"description": "Stylify monorepo",
	"author": "Vladimír Macháček",
	"license": "MIT",
	"main": "index.js",
	"scripts": {
		"repo:init": "yarn install && yarn link && yarn bootstrap",
		"bootstrap": "lerna bootstrap --force-local",
		"watch": "yarn build -w",
		"build": "node --max-old-space-size=8192 node_modules/.bin/rollup -c scripts/build.ts --configPlugin typescript={exclude:[\\'packages/**\\']}",
		"types": "ts-node scripts/types.ts",
		"autoprefixer:build": "packages=autoprefixer yarn build",
		"autoprefixer:watch": "packages=autoprefixer yarn watch",
		"stylify:gnp": "node --experimental-modules packages/stylify/tools/native-preset-generator",
		"stylify:mqe": "node --experimental-modules packages/stylify/tools/media-queries-extractor",
		"stylify:build": "packages=stylify yarn build",
		"stylify:watch": "packages=stylify yarn watch",
		"nuxtmodule:build": "packages=nuxt-module yarn build",
		"nuxtmodule:watch": "packages=nuxt-module yarn watch",
		"nuxtmodule:plg:build": "cd packages/nuxt-module/playground && yarn install && yarn build",
		"nuxtmodule:plg:dev": "cd packages/nuxt-module/playground && yarn install && yarn dev",
		"nuxtmodule:plg:start": "cd packages/nuxt-module/playground && yarn start",
		"profiler:build": "packages=profiler yarn build",
		"profiler:watch": "packages=profiler yarn watch",
		"lint:check": "eslint packages/**/src/**/*.{js,ts}",
		"lint:fix": "yarn lint:check --fix",
		"jest:test": "jest --coverage --coverageProvider v8"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stylify/packages.git"
	},
	"keywords": [],
	"bugs": {
		"url": "https://github.com/stylify/packages/issues"
	},
	"homepage": "https://github.com/stylify/packages/#readme",
	"devDependencies": {
		"@babel/core": "^7.12",
		"@babel/plugin-proposal-class-properties": "^7.14",
		"@babel/plugin-proposal-object-rest-spread": "^7.14",
		"@babel/preset-env": "^7.12",
		"@babel/preset-react": "^7.12",
		"@babel/preset-typescript": "^7.12",
		"@rollup/plugin-babel": "^5.2",
		"@rollup/plugin-commonjs": "^17.0",
		"@rollup/plugin-node-resolve": "^11.0",
		"@rollup/plugin-replace": "^2.3",
		"@rollup/plugin-typescript": "^8.2.5",
		"@types/jest": "^26.0",
		"@types/node": "^14.14",
		"@typescript-eslint/eslint-plugin": "^4.11",
		"@typescript-eslint/parser": "^4.11",
		"babel-jest": "^26.6",
		"eslint": "^7.16",
		"htm": "^3.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.0",
		"jest-environment-jsdom": "^27.0",
		"jest-environment-node": "^27.0",
		"lerna": "^4.0",
		"postcss": "^8.2",
		"postcss-url": "^10.1",
		"preact": "^10.5",
		"promise": "^8.1",
		"rollup": "^2.35",
		"rollup-plugin-banner": "^0.2",
		"rollup-plugin-postcss": "^4.0",
		"rollup-plugin-terser": "^7.0",
		"rollup-plugin-typescript2": "^0.30",
		"ts-jest": "^27.0",
		"ts-node": "^10.2.1",
		"tslib": "^2.0",
		"typescript": "^4.1",
		"v8-compile-cache": "^2.3.0"
	},
	"browserslist": [
		"> 0.10%"
	]
}
