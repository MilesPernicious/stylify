{
	"name": "@stylify/packages",
	"description": "Stylify monorepo",
	"author": "Vladimír Macháček",
	"license": "MIT",
	"scripts": {
		"repo:init": "yarn install && yarn link && yarn bootstrap && yarn types",
		"repo:pack": "lerna run pack",
		"repo:publish": "yarn lerna:patch && yarn types && yarn build && npm login && lerna publish --no-git-tag-version --no-push",
		"lerna:patch": "lerna version patch --no-push --no-git-tag-version --yes",
		"bootstrap": "lerna bootstrap --force-local",
		"rollup:run": "node --max-old-space-size=8192 --experimental-modules node_modules/rollup/dist/bin/rollup",
		"rollup:build-config": "yarn rollup:run -c scripts/build.rollup.config.js",
		"watch": "yarn build -w",
		"build": "yarn rollup:build-config && yarn rollup:run -c scripts/build.js",
		"build:all": "yarn rollup:build-config && node scripts/build-all.js",
		"types": "ts-node scripts/types.ts",
		"autoprefixer:build": "cross-env packages=autoprefixer yarn build",
		"autoprefixer:watch": "cross-env packages=autoprefixer yarn watch",
		"autoprefixer:test": "yarn jest:test packages/autoprefixer/tests/jest",
		"bundler:build": "cross-env packages=bundler yarn build",
		"bundler:watch": "cross-env packages=bundler yarn watch",
		"bundler:plg:start": "ts-node packages/bundler/playground/bundles.ts",
		"bundler:test": "yarn jest:test packages/bundler/tests/jest",
		"stylify:gnp": "node --experimental-modules packages/stylify/tools/native-preset-generator",
		"stylify:mqe": "node --experimental-modules packages/stylify/tools/media-queries-extractor",
		"stylify:build": "cross-env packages=stylify yarn build",
		"stylify:watch": "cross-env packages=stylify yarn watch",
		"stylify:test": "yarn jest:test packages/stylify/tests/jest",
		"nuxt:build": "cross-env packages=nuxt yarn build",
		"nuxt:watch": "cross-env packages=nuxt yarn watch",
		"nuxt:plg:build": "cd packages/nuxt/playground && yarn build",
		"nuxt:plg:dev": "cd packages/nuxt/playground && yarn dev",
		"nuxt:plg:start": "cd packages/nuxt/playground && yarn start",
		"nuxt-module:build": "cross-env packages=nuxt-module yarn build",
		"nuxt-module:watch": "cross-env packages=nuxt-module yarn watch",
		"nuxt-module:plg:build": "cd packages/nuxt-module/playground && yarn install && yarn build",
		"nuxt-module:plg:dev": "cd packages/nuxt-module/playground && yarn install && yarn dev",
		"nuxt-module:plg:start": "cd packages/nuxt-module/playground && yarn start",
		"profiler:build": "cross-env packages=profiler yarn build",
		"profiler:watch": "cross-env packages=profiler yarn watch",
		"unplugin:build": "cross-env packages=unplugin yarn build",
		"unplugin:watch": "cross-env packages=unplugin yarn watch",
		"unplugin:test": "yarn jest:test packages/unplugin/tests/jest",
		"eslint:check": "eslint packages/**/src/**/*.{js,ts}",
		"eslint:fix": "yarn eslint:check --fix",
		"jest:test": "jest --clearCache && jest --maxWorkers 1",
		"jest:test+coverage": "jest --collect-coverage --coverageProvider=v8"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stylify/packages.git"
	},
	"keywords": [],
	"bugs": {
		"url": "https://github.com/stylify/packages/issues"
	},
	"homepage": "https://github.com/stylify/packages/#readme",
	"devDependencies": {
		"@babel/core": "^7.18",
		"@babel/plugin-proposal-class-properties": "^7.17",
		"@babel/plugin-proposal-object-rest-spread": "^7.18",
		"@babel/preset-env": "^7.18",
		"@babel/preset-react": "^7.17",
		"@babel/preset-typescript": "^7.17",
		"@rollup/plugin-babel": "^5.3",
		"@rollup/plugin-commonjs": "^22.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0",
		"@rollup/plugin-replace": "^4.0",
		"@rollup/plugin-typescript": "^8.3",
		"@types/jest": "^27.5.1",
		"@types/node": "^17.0",
		"@typescript-eslint/eslint-plugin": "^5.26",
		"@typescript-eslint/parser": "^5.26",
		"babel-jest": "^28.1",
		"cross-env": "^7.0",
		"eslint": "^8.16",
		"fs-extra": "^10.1",
		"htm": "^3.1",
		"identity-obj-proxy": "^3.0",
		"jest": "^28.1",
		"jest-environment-jsdom": "^28.1",
		"jest-environment-node": "^28.1",
		"lerna": "^4.0",
		"node-sass": "^7.0",
		"postcss": "^8.4",
		"postcss-url": "^10.1",
		"preact": "^10.5",
		"promise": "^8.1",
		"rollup": "^2.75",
		"rollup-plugin-postcss": "^4.0",
		"rollup-plugin-terser": "^7.0",
		"rollup-plugin-typescript2": "^0.31",
		"ts-jest": "^28.0",
		"ts-node": "^10.2.1",
		"tslib": "^2.0",
		"typescript": "^4.5",
		"v8-compile-cache": "^2.3.0"
	}
}
